@model MVC_Demo.Models.Student.StudentItemModel

<div class="login-page">
  <div class="form">
        @using (Html.BeginForm("Update", "Student", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.StudentId)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder="name"})
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @placeholder="age"})
            <input type="submit" name="submit" class="btn btn-info btn-md" value="save"/>
        }
  </div>
  <div>@ViewBag.message</div>
</div>